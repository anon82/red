#:import get_color_from_hex kivy.utils.get_color_from_hex
MDScreen:
    name:"z"
    Panel:
        pos_hint:{"center_x":.5,"center_y":.5}
        size_hint:.35,.50
        canvas.before:  
            Color:
                rgba: (33/255, 150/255, 243/255, 1) 
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [15]
            Color:
                rgba: (255/255, 255/255, 255/255, 1) 
            RoundedRectangle:
                size: self.width-20, self.height-20
                pos: self.x+10, self.y+10
        MDLabel:
            markup:True
            text: "Healthy World"
            pos_hint: {"center_x":0.50, "center_y":0.92}
            halign:"center" 
        MDTextField:
            id:username
            hint_text:"username"
            mode: 'round'
            icon_right:"account"
            pos_hint: {"center_x": 0.50, "center_y":0.8}
            size_hint_x:.45

            font_size:18 
        #password
        MDTextField:
            id:password
            hint_text:"password"
            mode: 'round'

            pos_hint: {"center_x": 0.50, "center_y":0.55}
            size_hint_x:.45

            font_size:18
            password:True
        MDIconButton:
            icon: "eye"
            pos_hint: {"center_x":0.67, "center_y":0.55}
            on_release:app.psw()
            opacity:.5
            id:l
        MDRoundFlatButton:
            text:"login"
            pos_hint: {"center_x": 0.35,  "center_y":0.25}
            font_size:12
            on_release:app.login(username.text,password.text)
        MDRoundFlatButton:
            text:"delete"
            pos_hint: {"center_x": 0.65,  "center_y":0.25}
            font_size:12
            on_release:app.delete()
            