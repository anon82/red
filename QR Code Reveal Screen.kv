#:import ZBarSymbol pyzbar.pyzbar.ZBarSymbol

MDScreen:
    name:"QR Code Reveal Screen" 
    MDBoxLayout:
        orientation: 'vertical'
        MDTopAppBar: 
            title: 'Code Reveal'
            mode: 'end' 
        MDLabel:
            text: app.userDiscountCode
            valign: 'top'
            halign: 'center'
        MDBottomAppBar:
            MDTopAppBar:
                left_action_items: [["eye-check",lambda x: app.userScoreGenerator()]] 
                mode: 'center'
                type: 'bottom'
                icon: 'scan-helper'
                on_action_button: root.manager.current = "QR Scan Screen" 
